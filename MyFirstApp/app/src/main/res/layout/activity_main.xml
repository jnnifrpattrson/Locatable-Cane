<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myfirstapp.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="220dp"
        android:layout_height="110dp"
        android:layout_marginBottom="475dp"
        android:layout_marginEnd="88dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="80dp"
        android:background="@android:color/holo_orange_light"
        android:text="@string/find_my_cane"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <HorizontalScrollView
        android:id="@+id/graph_canvas"
        android:layout_width="348dp"
        android:layout_height="266dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"></HorizontalScrollView>

    <EditText
        android:id="@+id/step_count_label"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginStart="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Total Step Count"
        app:layout_constraintBottom_toTopOf="@+id/last_act_label"
        app:layout_constraintStart_toStartOf="parent" />
        /*app:layout_constraintBottom_toTopOf="@+id/last_act_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="1.0"*/ />

    <EditText
        android:id="@+id/step_count_val"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="63dp"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="number"
        android:text="10,000"
        app:layout_constraintBottom_toTopOf="@+id/last_act_val"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/step_count_label"
        app:layout_constraintTop_toBottomOf="@+id/graph_canvas" />
        */app:layout_constraintBottom_toTopOf="@+id/last_act_val"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/step_count_label"
        app:layout_constraintTop_toBottomOf="@+id/button"*/ />

    <EditText
        android:id="@+id/last_act_label"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:layout_marginStart="42dp"
        android:ems="10"
        android:inputType="text"
        android:text="Last Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
        /*app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"*/ />

    <EditText
        android:id="@+id/last_act_val"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="57dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/last_act_label" />
        /*app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/last_act_label"
        app:layout_constraintTop_toBottomOf="@+id/step_count_val"
        app:layout_constraintVertical_bias="0.0" *//>
</android.support.constraint.ConstraintLayout>
